// Kalani
// 3.27.25
// Parallel Arrays 

#include <iostream>
#include <iomanip>

using namespace std;
int main (){

    const int ARRAY_SIZE = 3;

    string names[ARRAY_SIZE] = {"Chris", "Zach", "Zuko"};
    int jerseyNumber[ARRAY_SIZE] = {15, 13, 12};


    for (int i = 0; i < 3; i++){
        cout << "\nName: " << names[i]  << endl;
    }
    for (int i = 0; i < 3; i++){
       cout << "\nJersey Number: " << jerseyNumber[i] << endl;
    }

    
return 0;
}
