// Purpose: to create a program to choose a number. Module 2 Lab 3

#include <iostream> 

using namespace std;

int main() {
int num;

   cout << "Enter a number between 0 and 9: \n";
   cin >> num;

   if (num > 0){
   cout << "The number is positive. \n";
   }
   if (num < 0){
   cout << "The number is negative. \n";
   }
   else if (num == 0){
   cout << "The number is zero. \n";
   }
   return 0;
}
